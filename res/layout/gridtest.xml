<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sa="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    sa:columnCount="4"
    sa:rowCount="4" >

    <TextView android:text="1,1" />

    <TextView android:text="1,2" />

    <TextView
        sa:layout_gravity="fill"
        sa:layout_rowSpan="2"
        android:gravity="center"
        android:text="1,3" />

    <TextView
        sa:layout_row="0"
        android:text="1,4" />

    <TextView android:text="2,1" />

    <TextView android:text="2,2" />

    <TextView
        sa:layout_row="1"
        android:text="2,4" />

    <TextView android:text="3,1" />

    <TextView android:text="3,2" />

    <TextView
        sa:layout_gravity="fill_horizontal"
        android:text="3,3 longer" />

    <TextView android:text="3,4" />

    <TextView android:text="4,1" />

    <TextView android:text="4,2" />

    <TextView
        sa:layout_gravity="fill_horizontal"
        android:text="4,3" />

    <TextView android:text="4,4" />

</android.support.v7.widget.GridLayout>